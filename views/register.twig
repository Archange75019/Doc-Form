
{% extends 'layout.twig' %}

{% block body %}
<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Inscription</h3>
				
			</div>
			<div class="card-body">
				<form method="POST" action="/app/register">
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" name="username" class="form-control" placeholder="username">
						
					</div>
                    <div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="email" name="email" class="form-control" placeholder="email">
						
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<select name="role" id="role-select">
    						<option value="">--Choisissez un role--</option>
							{% if role %}
								{% for role in role %}
									{% if role != statut%}
										<option value="{{ role }}">{{ role }}</option>
									{% endif %}
								{% endfor %}
							{% endif %}
							<option value="Autre">Autre</option>
						</select>
						<div id="otherRole">
							<input type="text" name="role" placeholder="DÃ©finir un role">
						</div>

						
					</div>
					<div class="input-group form-group">
						<div class="input-group-prepend">
							<span class="input-group-text"><i class="fas fa-user"></i></span>
						</div>
						<input type="text" name="site" class="form-control" placeholder="Site">
						
					</div>
					<div class="form-group">
						<input type="submit" value="Inscription" class="btn float-right login_btn">
					</div>
				</form>
			</div>
			
			</div>
		</div>
	</div>
</div>
{% endblock %}