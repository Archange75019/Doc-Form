{% extends 'layout.twig' %}

{% block body %}
<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Ajout de documents</h3>	
			</div>
			<div class="card-body">
                <form method="post" action="/app/AddDocs" enctype="multipart/form-data" id="add">
                    <input type="text" name="titre" placeholder="titre de votre document" required="required">
                    <select name="domain" id="domain-select" required="required">
                        <option value="">--Choisissez un domaine--</option>
                        {% if domaines %}
                            {% for domaine in domaines %}
                                <option value="{{ domaine }}">{{ domaine }}</option>
                            {% endfor %}
                        {% endif %}
                        <option value="Autre">Autre</option>
                    </select>
                    <div id="otherDomaine">
                        <input type="text" name="domaine" placeholder="DÃ©finir un domaine">
                    </div>
                    <textarea name="description" id="textarea" rows="5" cols="33" placeholder="Description" required="required">
                    </textarea>
                    <input type="file" name="fileToUpload" id="fileUpload" required="required">
                    <input type="submit" value="Envoyer">
                </form>
			</div>
			
			</div>
		</div>
	</div>
</div>
{% endblock %}